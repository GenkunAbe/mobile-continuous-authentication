<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context="org.genku.touchauth.MainActivity">

    <Button
        android:id="@+id/collect_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCollectStartButtonClick"
        android:text="Collect"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/train_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onTrainStartButtonClick"
        android:text="Train"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/test_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onTestStartButtonClick"
        android:text="Test"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onStopButtonClick"
        android:text="Stop"
        android:layout_margin="5dp"/>

</LinearLayout>
